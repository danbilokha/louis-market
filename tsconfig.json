{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src",
    "paths": {
      "@louis": ["app/*"],
      "@pages/*": ["app/pages/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@pipes/*": ["app/pipes/*"],
      "@effects/*": ["app/effects/*"],
      "@settings/*": ["app/settings/*"],
      "@common/*": ["app/common/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@db/*": ["app/db/*"],
      "@ui/*": ["app/ui/*"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
